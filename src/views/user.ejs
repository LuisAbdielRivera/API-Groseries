<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css" />
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
    <title>Abarrotes TI</title>
</head>

<body>
    <div data-role="page" data-theme="b">
        <div data-role="header">
            <h1>Abarrotes TI</h1>
            <div data-role="navbar">
                <ul>
                    <li><a href="/" data-icon="home">Inicio</a></li>
                    <li><a href="/" data-icon="eye" class="ui-btn-active">Productos</a></li>
                    <li><a href="/user/register" data-icon="user">Empleados</a></li>
                </ul>
            </div>
        </div>
        <div data-role="content">
            <form action="/register" method="POST">
                <input type="text" name="id" placeholder="No.Trabajador">
                <input type="text" name="name" placeholder="Nombre">
                <input type="text" name="lastname" placeholder="Apellido">
                <input type="text" name="address" placeholder="Numero de Telefono">

                <input type="submit" value="Submit">
            </form>
            <form>
                <input data-type="search" id="searchForCollapsibleSetChildren">
            </form>
                <div data-role="collapsibleset" data-filter="true" data-children="> div, > div div ul li" data-inset="true" id="collapsiblesetForFilterChildren" data-input="#searchForCollapsibleSetChildren">
                    <% users.forEach((user) => { %>
                        <div data-role="collapsible" data-filtertext="<%= user.name %>">
                            <h1><%= user.name %></h1>
                                <ul data-role="listview" data-inset="false">
                                    <img style="width: 15%; padding: 10px;" src="https://uploads.turbologo.com/uploads/design/hq_preview_image/1274589/draw_svg20210507-22909-q202z5.svg.png" alt="logo-tienda">
                                    <li>Numero de Trabajador: <%= user.id %></li>
                                    <li>Nombre: <%= user.name %></li>
                                    <li>Apellido: <%= user.lastname %></li>
                                    <li>Domicilio: <%= user.address %></li>
                                    <li>Telefono: <%= user.phone %></li>

                                    <li><a href="/<%= user.identify %>" class="ui-btn">Edit</a></li>
                                    <li><a href="/delete/<%= user.identify %>" class="ui-btn">Delete</a></li>
                                </ul>
                            </div>
                    <% }) %>
                </div>
        </div>
        <div data-role="footer">
            <h5>Developed by Abdiel</h5>
        </div>
    </div>
</body>

</html>
